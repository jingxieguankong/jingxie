                     { x: 120.66878, y: 27.85351, html: "" },
                     { x: 120.67127, y: 27.85418, html: "" },
                     { x: 120.67148, y: 27.85278, html: "" },
                     { x: 120.67382, y: 27.85326, html: "" },
                     { x: 120.67359, y: 27.85467, html: "" },
                     { x: 120.67582, y: 27.85506, html: "" },
