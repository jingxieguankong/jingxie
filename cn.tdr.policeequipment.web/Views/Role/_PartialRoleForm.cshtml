@model object

<div id="x-parentId" class="x-form-row">
    <input id="orgId" name="orgId" style="width:100%;height:26px" class="easyui-combotree"
           data-options="url:'@Url.Action("Tree", "Org")',method:'get',prompt:'组织机构 ...',required:true" />
</div>
<div class="x-form-row" style="padding:3px;">
    <input id="name" name="name" class="easyui-textbox"
           data-options="prompt:'角色名称 ...',required:true"
           style="width:100%;height:26px" />
</div>
<div class="x-form-row" style="padding:3px;">
    <input id="remark" name="remark" class="easyui-textbox" value=""
           data-options="multiline:true,prompt:'备注 ...'"
           style="width:100%;height:80px">
</div>