@using cn.tdr.policeequipment.web.Models
@model GridRowModel<TableHeaderModel>
@{
    var header = Model.headerModel as TableSiteHeaderModel;
}
<tr>
    <th data-options="field:'@header.org.field',align:'left',width:3,formatter:fmtOrg">@header.org.title</th>
    <th data-options="field:'@header.siteId.field',align:'left',width:2">@header.siteId.title</th>
    <th data-options="field:'@header.category.field',align:'left',width:1,formatter:fmtCate">@header.category.title</th>
    <th data-options="field:'@header.gps.field',align:'left',width:2,formatter:fmtGps">@header.gps.title</th>
    <th data-options="field:'@header.id.field',align:'left',formatter:@Model.actionFormart"></th>
</tr>
